# uWSGI monitorization

check process uwsgi{{ item }} with pidfile /var/run/uwsgi{{ item }}.pid
  start program = "/usr/sbin/service uwsgi{{ item }} start"
  stop program  = "/usr/sbin/service uwsgi{{ item }} stop"
  if cpu > 10% for 2 cycles then exec "/bin/bash -c 'kill -SIGHUP `cat /var/run/uwsgi{{ item }}.pid`'"
  if cpu > 10% for 5 cycles then restart
